<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    app:contentPadding="5dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageView
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/repositories_detail_file_list_item_logo"
        android:src="@mipmap/ic_folder_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/repositories_detail_file_list_item_logo"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/repositories_detail_file_list_item_name"
        android:textSize="22sp"
        android:text="name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




  </RelativeLayout>

</android.support.v7.widget.CardView>
